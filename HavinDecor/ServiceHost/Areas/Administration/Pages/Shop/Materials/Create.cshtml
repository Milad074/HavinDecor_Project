@model ShopManagement.Application.Contracts.Material.CreateMaterial
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">تعریف جزئیات جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="MaterialName" class="control-label">جنس پارچه</label>
                    <input type="text" class="form-control" asp-for="MaterialName">
                    <span asp-validation-for="MaterialName" class="error"></span>
                </div>
            </div><div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Panel" class="control-label">سمت پنل</label>
                    <input type="text" class="form-control" asp-for="Panel">
                    <span asp-validation-for="Panel" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Price" class="control-label">قیمت</label>
                    <input type="text" class="form-control" asp-for="Price">
                    <span asp-validation-for="Price" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="RingColor" class="control-label">رنگ حلقه پانچ</label>
                    <input type="text" class="form-control" asp-for="RingColor">
                    <span asp-validation-for="RingColor" class="error"></span>
                </div>
            </div>
        </div>
        
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>